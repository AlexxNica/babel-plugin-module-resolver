{
    "parser": "babel-eslint",
    "env": {
        "node": true,
        "es6": true
    },
    "rules": {
        "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
        "camelcase": [2, {"properties": "never"}],
        "comma-style": [2, "last"],
        "indent": 2,
        "no-underscore-dangle": 0,
        "quotes": [2, "single", "avoid-escape"],
        "semi": [2, "always"],
        "space-before-function-paren": [2, "never"]
    },
    "plugins": [
    ]
}
